# Configurações de Produção - QuizLiftOff
# Copie este arquivo para .env.production e configure as variáveis

# ===== CONFIGURAÇÕES GERAIS =====
NODE_ENV=production
VITE_APP_NAME=QuizLiftOff
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://yourdomain.com
VITE_API_URL=https://api.yourdomain.com

# ===== SUPABASE CONFIGURAÇÕES =====
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here
SUPABASE_DB_PASSWORD=your_database_password_here

# ===== STRIPE CONFIGURAÇÕES =====
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
VITE_STRIPE_PRICE_ID_BASIC=price_your_basic_plan_price_id
VITE_STRIPE_PRICE_ID_PRO=price_your_pro_plan_price_id
VITE_STRIPE_PRICE_ID_ENTERPRISE=price_your_enterprise_plan_price_id

# ===== GOOGLE OAUTH =====
VITE_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# ===== REDIS CONFIGURAÇÕES =====
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10
REDIS_RETRY_ATTEMPTS=3

# ===== CONFIGURAÇÕES DE EMAIL =====
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password_here
SMTP_FROM_NAME=QuizLiftOff
SMTP_FROM_EMAIL=noreply@yourdomain.com

# ===== CONFIGURAÇÕES DE SEGURANÇA =====
JWT_SECRET=your_very_long_and_secure_jwt_secret_here_min_32_chars
ENCRYPTION_KEY=your_32_character_encryption_key_here
SESSION_SECRET=your_session_secret_here_min_32_chars
CSRF_SECRET=your_csrf_secret_here
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=900000

# ===== MONITORAMENTO =====
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
BACKUP_WEBHOOK_URL=https://hooks.slack.com/services/your/backup/webhook

# ===== LOGS =====
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_ROTATE=true

# ===== BACKUP =====
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

# ===== CDN E ASSETS =====
CDN_URL=https://cdn.yourdomain.com
ASSETS_URL=https://assets.yourdomain.com
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# ===== ANALYTICS =====
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
HOTJAR_ID=your_hotjar_id
MIXPANEL_TOKEN=your_mixpanel_token

# ===== INTEGRAÇÕES EXTERNAS =====
ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your/webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_mailchimp_list_id

# ===== CONFIGURAÇÕES DE CACHE =====
CACHE_TTL=3600
CACHE_MAX_SIZE=100
CACHE_ENABLED=true
STATIC_CACHE_TTL=31536000

# ===== SSL/TLS =====
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key
SSL_CA_PATH=/etc/ssl/certs/ca-certificates.crt
HSTS_MAX_AGE=31536000

# ===== PERFORMANCE =====
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# ===== FEATURE FLAGS =====
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_WEBHOOKS=true
FEATURE_ADVANCED_QUIZ_BUILDER=true
FEATURE_TEAM_COLLABORATION=false
FEATURE_WHITE_LABEL=false
FEATURE_API_ACCESS=true

# ===== LIMITES DE PLANOS =====
BASIC_PLAN_QUIZ_LIMIT=10
BASIC_PLAN_RESPONSE_LIMIT=1000
PRO_PLAN_QUIZ_LIMIT=100
PRO_PLAN_RESPONSE_LIMIT=10000
ENTERPRISE_PLAN_QUIZ_LIMIT=-1
ENTERPRISE_PLAN_RESPONSE_LIMIT=-1

# ===== CONFIGURAÇÕES DE DESENVOLVIMENTO =====
# Estas variáveis são apenas para referência em produção
# DEV_SERVER_PORT=5173
# DEV_SERVER_HOST=localhost
# VITE_DEV_TOOLS=false
# HOT_RELOAD=false

# ===== CONFIGURAÇÕES DE TESTE =====
# Estas variáveis são desabilitadas em produção
# TEST_MODE=false
# MOCK_PAYMENTS=false
# MOCK_EMAIL=false
# CYPRESS_RECORD_KEY=disabled_in_production

# ===== HEALTH CHECKS =====
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# ===== TIMEZONE =====
TZ=America/Sao_Paulo
DEFAULT_LOCALE=pt-BR
SUPPORTED_LOCALES=pt-BR,en-US,es-ES

# ===== CONFIGURAÇÕES DE DOMÍNIO =====
DOMAIN=yourdomain.com
WWW_DOMAIN=www.yourdomain.com
API_DOMAIN=api.yourdomain.com
CDN_DOMAIN=cdn.yourdomain.com
ASSETS_DOMAIN=assets.yourdomain.com

# ===== CONFIGURAÇÕES DE BANCO DE DADOS =====
# Supabase já gerencia o banco, mas para referência:
# DB_HOST=db.your-project.supabase.co
# DB_PORT=5432
# DB_NAME=postgres
# DB_USER=postgres
# DB_SSL=true
# DB_POOL_SIZE=10
# DB_TIMEOUT=30000